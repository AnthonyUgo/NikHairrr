{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "*.{css,js,json,svg,png,jpg,jpeg,gif,ico,woff,woff2,ttf,eot}",
      "/assets/*"
    ]
  },
  "routes": [
    {
      "route": "/",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/shop",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/shop/bundles",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/shop/wigs",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/shop/closures",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/shop/frontals",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/testimonials",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/privacy-policy",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/terms-of-service",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/refund-policy",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "mimeTypes": {
    ".json": "application/json",
    ".svg": "image/svg+xml",
    ".webp": "image/webp",
    ".MOV": "video/quicktime"
  },
  "globalHeaders": {
    "cache-control": "public, max-age=31536000, immutable",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Permissions-Policy": "geolocation=(), microphone=(), camera=()"
  }
}
